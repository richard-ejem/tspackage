{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "removeComments": true,
    "skipLibCheck": false,
    "target": "es5",
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
